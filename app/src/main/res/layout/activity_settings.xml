<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hungryappysleepy.free_livingactivitytracker.SettingsActivity" >

    <Space
        android:id="@+id/centreSpace"

        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Switch
        android:text="Use Interval\t\t\t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchInterval"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/switchInterval"
        android:layout_toRightOf="@+id/textViewIntervalInput"
        android:layout_toEndOf="@+id/textViewIntervalInput"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:id="@+id/inputInterval" />

    <TextView
        android:text="Interval (In Seconds)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewIntervalInput"
        android:layout_alignBaseline="@+id/inputInterval"
        android:layout_alignBottom="@+id/inputInterval"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textViewIntervalInput"
        android:layout_alignLeft="@+id/inputInterval"
        android:layout_alignStart="@+id/inputInterval"
        android:id="@+id/inputName" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNameInput"
        android:layout_alignBaseline="@+id/inputName"
        android:layout_alignBottom="@+id/inputName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonExit"
        android:text="Exit"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/centreSpace"
        android:layout_toStartOf="@+id/centreSpace" />

    <Button
        android:id="@+id/buttonSave"
        android:text="Save"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/centreSpace"
        android:layout_toEndOf="@+id/centreSpace"
        />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
